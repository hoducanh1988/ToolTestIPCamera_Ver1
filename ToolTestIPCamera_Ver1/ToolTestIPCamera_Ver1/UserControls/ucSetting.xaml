<UserControl x:Class="ToolTestIPCamera_Ver1.UserControls.ucSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolTestIPCamera_Ver1.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1366">

    <UserControl.Resources>
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border  Name="Border" Margin="0,0,-4,0" BorderThickness="1,1,1,1" CornerRadius="2,12,0,0" >
                                <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="12,2,12,2" RecognizesAccessKey="True"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Panel.ZIndex" Value="100"/>
                                <Setter TargetName="Border" Property="Background" Value="#43d854" />
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#FFEEEEEE" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="Orange" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource colorBorder}" BorderThickness="0.5" CornerRadius="5" Background="{StaticResource colorBackground}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <TabControl Margin="5" Grid.Row="0">

                <!--Cai dat he thong-->
                <TabItem>
                    <TabItem.Header>
                        <Grid Height="30">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" Text="Cài đặt hệ thống" FontWeight="SemiBold"/>
                        </Grid>
                    </TabItem.Header>
                    <ScrollViewer Margin="5,5,5,5">
                        <StackPanel Margin="0,0,5,0">
                            <!--Trạm test-->
                            <Grid Height="100">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <Label Foreground="{StaticResource colorBorder}" FontSize="14" FontWeight="Bold" Content="CÀI ĐẶT TRẠM TEST:"></Label>
                                    <Label Content="Tên trạm test" FontSize="13"></Label>
                                    <ComboBox x:Name="cbbStation" Height="30" VerticalContentAlignment="Center" Background="#fffdbf" FontSize="13" FontWeight="Bold" Padding="5,0,0,0" Text="{Binding Path=station, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></ComboBox>
                                </StackPanel>
                                <Grid Grid.Column="1" Margin="10">
                                    <!--<Image Source="/Asset/Images/BOSA.jpg"/>-->
                                </Grid>
                            </Grid>

                            <!--MINUS-->
                            <Label FontSize="15" FontWeight="Bold" Content="-"></Label>
                            
                            <!--MAC-->
                            <Grid Height="150">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <Label Foreground="{StaticResource colorBorder}" FontSize="14" FontWeight="Bold" Content="CÀI ĐẶT THÔNG TIN ĐỊA CHỈ MAC:"></Label>
                                    <Label Content="Tổng số kí tự trên tem Mac Address" FontSize="13"></Label>
                                    <TextBox IsEnabled="False" CharacterCasing="Upper" FontSize="13" FontWeight="Bold" Padding="5,0,0,0" Text="{Binding Path=maclen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" ></TextBox>
                                    <Label Content="Định dạng 6 kí tự đầu tiên trên tem Mac Address" FontSize="13"></Label>
                                    <TextBox Background="#fffdbf" FontSize="13" FontWeight="Bold" Padding="5,0,0,0" Text="{Binding Path=macsixdigit, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></TextBox>
                                </StackPanel>
                                <Grid Grid.Column="1" Margin="10">
                                    <!--<Image Source="/Asset/Images/BOSA.jpg"/>-->
                                </Grid>
                            </Grid>

                            <!--MINUS-->
                            <Label FontSize="15" FontWeight="Bold" Content="-"></Label>
                            
                            <!--Firmware-->
                            <Grid Height="220">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <Label Foreground="{StaticResource colorBorder}" FontSize="14" FontWeight="Bold" Content="CÀI ĐẶT FIRMWARE:"></Label>
                                    <Label Content="Đường dẫn file firmware linux.bin" FontSize="13"></Label>
                                    <Grid>
                                        <Button x:Name="btnselectlinux" Click="Button_Click" Width="100" HorizontalAlignment="Left" Content="Browser..."></Button>
                                        <TextBox IsReadOnly="True" Margin="110,0,0,0" Background="#fffdbf" CharacterCasing="Normal" FontSize="13" FontWeight="Bold" Padding="5,0,0,0" Text="{Binding Path=linuxpath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></TextBox>
                                    </Grid>
                                    
                                    <Label Content="Đường dẫn file firmware mcu.bin" FontSize="13"></Label>
                                    <Grid>
                                        <Button x:Name="btnselectmcu" Click="Button_Click" Width="100" HorizontalAlignment="Left" Content="Browser..."></Button>
                                        <TextBox IsReadOnly="True" Margin="110,0,0,0" Background="#fffdbf" CharacterCasing="Normal" FontSize="13" FontWeight="Bold" Padding="5,0,0,0" Text="{Binding Path=mcupath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></TextBox>
                                    </Grid>
                                    <Label Content="Đường dẫn file firmware ldc.bin" FontSize="13"></Label>
                                    <Grid>
                                        <Button x:Name="btnselectldc" Click="Button_Click" Width="100" HorizontalAlignment="Left" Content="Browser..."></Button>
                                        <TextBox IsReadOnly="True" Margin="110,0,0,0" Background="#fffdbf" CharacterCasing="Normal" FontSize="13" FontWeight="Bold" Padding="5,0,0,0" Text="{Binding Path=ldcpath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></TextBox>
                                    </Grid>
                                    
                                </StackPanel>
                                <Grid Grid.Column="1" Margin="10">
                                    <!--<Image Source="/Asset/Images/BOSA.jpg"/>-->
                                </Grid>
                            </Grid>
                            
                            <!--MINUS-->
                            <Label FontSize="15" FontWeight="Bold" Content="-"></Label>

                            <!--DUT-->
                            <Grid Height="160">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <Label Foreground="{StaticResource colorBorder}" FontSize="14" FontWeight="Bold" Content="CÀI ĐẶT CHO SẢN PHẨM (IP Camera):"></Label>
                                    <Label Content="IP Address" FontSize="13"></Label>
                                    <TextBox Background="#fffdbf" CharacterCasing="Normal" FontSize="13" FontWeight="Bold" Padding="5,0,0,0" Text="{Binding Path=dutip, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></TextBox>
                                    <Label Content="Tên đăng nhập" FontSize="13"></Label>
                                    <TextBox Background="#fffdbf" CharacterCasing="Normal" FontSize="13" FontWeight="Bold" Padding="5,0,0,0" Text="{Binding Path=dutuser, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></TextBox>
                                    <Label Visibility="Collapsed" Content="Mã đăng nhập" FontSize="13"></Label>
                                    <TextBox Visibility="Collapsed" Background="#fffdbf" CharacterCasing="Normal" FontSize="13" FontWeight="Bold" Padding="5,0,0,0" Text="{Binding Path=dutpass, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></TextBox>

                                </StackPanel>
                                <Grid Grid.Column="1" Margin="10">
                                    <!--<Image Source="/Asset/Images/igate.png"/>-->
                                </Grid>
                            </Grid>

                            <!--MINUS-->
                            <Label FontSize="15" FontWeight="Bold" Content="-"></Label>

                            <!--USB DEBUG-->
                            <Grid Height="100">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <WrapPanel>
                                        <Label Foreground="{StaticResource colorBorder}" FontSize="14" FontWeight="Bold" Content="CÀI ĐẶT CHO USB DEBUG:"></Label>
                                        <!--<Button Style="{StaticResource roundCornerButton}" Content="Hỗ trợ cài đặt" Click="Button_Click"></Button>-->
                                    </WrapPanel>
                                    <Label Content="USB Debug - DUT #01" FontSize="13"></Label>
                                    <ComboBox Padding="5,0,0,0" Background="#fffdbf" Height="30" VerticalContentAlignment="Center" x:Name="cbbUsbdebug1" FontSize="13" FontWeight="Bold" Text="{Binding Path=usbdebug1, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></ComboBox>
                                   
                                </StackPanel>
                                <Grid Grid.Column="1" Margin="20">
                                    <!--<Image Source="/Asset/Images/usbDebug.png" Margin="50"/>-->
                                </Grid>
                            </Grid>

                            <!--MINUS-->
                            <Label FontSize="15" FontWeight="Bold" Content="-"></Label>

                            <!--WIFI Router-->
                            <Grid Height="160">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <Label Foreground="{StaticResource colorBorder}" FontSize="14" FontWeight="Bold" Content="CÀI ĐẶT WIFI ROUTER:"></Label>
                                    <Label Content="IP Address" FontSize="13"></Label>
                                    <TextBox Background="#fffdbf" CharacterCasing="Normal" FontSize="13" FontWeight="Bold" Padding="5,0,0,0" Text="{Binding Path=routerip, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></TextBox>
                                    <Label Content="SSID" FontSize="13"></Label>
                                    <TextBox Background="#fffdbf" CharacterCasing="Normal" FontSize="13" FontWeight="Bold" Padding="5,0,0,0" Text="{Binding Path=routerssid, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></TextBox>
                                </StackPanel>
                                <Grid Grid.Column="1" Margin="10">
                                    <!--<Image Source="/Asset/Images/igate.png"/>-->
                                </Grid>
                            </Grid>


                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!--Cai dat thong so phan dinh-->
                <TabItem>
                    <TabItem.Header>
                        <Grid Height="30">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" Text="Cài đặt giá trị phán định" FontWeight="SemiBold"/>
                        </Grid>
                    </TabItem.Header>
                    <ScrollViewer Margin="5,5,5,5">
                        <StackPanel Margin="0,0,5,0">
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <Label Content="Firmware version" FontSize="13"></Label>
                                    <TextBox Background="#fffdbf" FontSize="13" FontWeight="Bold" Padding="5,0,0,0" Text="{Binding Path=fwversion, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></TextBox>
                                    <Label Content="Light Sensor ADC Value" FontSize="13"></Label>
                                    <TextBox Background="#fffdbf" FontSize="13" FontWeight="Bold" Padding="5,0,0,0" Text="{Binding Path=adcvalue, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></TextBox>
                                </StackPanel>
                            </Grid>


                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!--Cau hinh bai test-->
                <TabItem>
                    <TabItem.Header>
                        <Grid Height="30">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" Text="Cấu hình bài test" FontWeight="SemiBold"/>
                        </Grid>
                    </TabItem.Header>
                    <ScrollViewer Margin="5,5,5,5">
                        <StackPanel Margin="0,0,5,0">

                            <!--Write MAC-->
                            <Grid Height="40">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=station}" Value="PCBA-LAYER3">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Right">Write MAC:</Label>
                                <ToggleButton Grid.Column="1" x:Name="togwm" Margin="-20,0,0,0" Height="30" Style="{StaticResource iosToggleButton}" IsChecked="{Binding Path=writemacoption, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></ToggleButton>
                                <Label Grid.Column="2" FontSize="25" FontWeight="Bold">
                                    <Label.Style>
                                        <Style TargetType="Label">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=togwm, Path=IsChecked}" Value="true">
                                                    <Setter Property="Content" Value="ON"/>
                                                    <Setter Property="Foreground" Value="{StaticResource colorContentOK}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=togwm, Path=IsChecked}" Value="false">
                                                    <Setter Property="Content" Value="OFF"/>
                                                    <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Label.Style>
                                </Label>
                            </Grid>

                            <!--Upload FW-->
                            <Grid Height="40">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=station}" Value="PCBA-LAYER3">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Right">Upload FW:</Label>
                                <ToggleButton Grid.Column="1" x:Name="togufw" Margin="-20,0,0,0" Height="30" Style="{StaticResource iosToggleButton}" IsChecked="{Binding Path=uploadfirmwareoption, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></ToggleButton>
                                <Label Grid.Column="2" FontSize="25" FontWeight="Bold">
                                    <Label.Style>
                                        <Style TargetType="Label">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=togufw, Path=IsChecked}" Value="true">
                                                    <Setter Property="Content" Value="ON"/>
                                                    <Setter Property="Foreground" Value="{StaticResource colorContentOK}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=togufw, Path=IsChecked}" Value="false">
                                                    <Setter Property="Content" Value="OFF"/>
                                                    <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Label.Style>
                                </Label>
                            </Grid>

                            <!--Check FW Version-->
                            <Grid Height="40">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=station}" Value="SAU-DONG-VO">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Right">Check Firmware Version:</Label>
                                <ToggleButton Grid.Column="1" x:Name="togckfwver" Margin="-20,0,0,0" Height="30" Style="{StaticResource iosToggleButton}" IsChecked="{Binding Path=checkfirmwareversionoption, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></ToggleButton>
                                <Label Grid.Column="2" FontSize="25" FontWeight="Bold">
                                    <Label.Style>
                                        <Style TargetType="Label">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=togckfwver, Path=IsChecked}" Value="true">
                                                    <Setter Property="Content" Value="ON"/>
                                                    <Setter Property="Foreground" Value="{StaticResource colorContentOK}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=togckfwver, Path=IsChecked}" Value="false">
                                                    <Setter Property="Content" Value="OFF"/>
                                                    <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Label.Style>
                                </Label>
                            </Grid>

                            <!--Check MAC-->
                            <Grid Height="40">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=station}" Value="SAU-DONG-VO">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Right">Check MAC:</Label>
                                <ToggleButton Grid.Column="1" x:Name="togckmac" Margin="-20,0,0,0" Height="30" Style="{StaticResource iosToggleButton}" IsChecked="{Binding Path=checkmacoption, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></ToggleButton>
                                <Label Grid.Column="2" FontSize="25" FontWeight="Bold">
                                    <Label.Style>
                                        <Style TargetType="Label">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=togckmac, Path=IsChecked}" Value="true">
                                                    <Setter Property="Content" Value="ON"/>
                                                    <Setter Property="Foreground" Value="{StaticResource colorContentOK}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=togckmac, Path=IsChecked}" Value="false">
                                                    <Setter Property="Content" Value="OFF"/>
                                                    <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Label.Style>
                                </Label>
                            </Grid>

                            <!--Check LAN-->
                            <Grid Height="40">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=station}" Value="PCBA-LAYER2">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Right">Check LAN:</Label>
                                <ToggleButton Grid.Column="1" x:Name="togcklan" Margin="-20,0,0,0" Height="30" Style="{StaticResource iosToggleButton}" IsChecked="{Binding Path=checklanoption, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></ToggleButton>
                                <Label Grid.Column="2" FontSize="25" FontWeight="Bold">
                                    <Label.Style>
                                        <Style TargetType="Label">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=togcklan, Path=IsChecked}" Value="true">
                                                    <Setter Property="Content" Value="ON"/>
                                                    <Setter Property="Foreground" Value="{StaticResource colorContentOK}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=togcklan, Path=IsChecked}" Value="false">
                                                    <Setter Property="Content" Value="OFF"/>
                                                    <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Label.Style>
                                </Label>
                            </Grid>

                            <!--Check SD Card-->
                            <Grid Height="40">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=station}" Value="PCBA-LAYER3">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Right">Check SD Card:</Label>
                                <ToggleButton Grid.Column="1" x:Name="togcksdcard" Margin="-20,0,0,0" Height="30" Style="{StaticResource iosToggleButton}" IsChecked="{Binding Path=checksdcardoption, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></ToggleButton>
                                <Label Grid.Column="2" FontSize="25" FontWeight="Bold">
                                    <Label.Style>
                                        <Style TargetType="Label">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=togcksdcard, Path=IsChecked}" Value="true">
                                                    <Setter Property="Content" Value="ON"/>
                                                    <Setter Property="Foreground" Value="{StaticResource colorContentOK}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=togcksdcard, Path=IsChecked}" Value="false">
                                                    <Setter Property="Content" Value="OFF"/>
                                                    <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Label.Style>
                                </Label>
                            </Grid>

                            <!--Check USB-->
                            <Grid Height="40">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=station}" Value="PCBA-LAYER3">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Row="6" Grid.Column="0" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Right">Check USB:</Label>
                                <ToggleButton Grid.Row="6" Grid.Column="1" x:Name="togckusb" Margin="-20,0,0,0" Height="30" Style="{StaticResource iosToggleButton}" IsChecked="{Binding Path=checkusboption, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></ToggleButton>
                                <Label Grid.Row="6" Grid.Column="2" FontSize="25" FontWeight="Bold">
                                    <Label.Style>
                                        <Style TargetType="Label">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=togckusb, Path=IsChecked}" Value="true">
                                                    <Setter Property="Content" Value="ON"/>
                                                    <Setter Property="Foreground" Value="{StaticResource colorContentOK}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=togckusb, Path=IsChecked}" Value="false">
                                                    <Setter Property="Content" Value="OFF"/>
                                                    <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Label.Style>
                                </Label>
                            </Grid>

                            <!--Check RGB LED-->
                            <Grid Height="40">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=station}" Value="PCBA-LAYER2">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Row="7" Grid.Column="0" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Right">Check RGB LED:</Label>
                                <ToggleButton Grid.Row="7" Grid.Column="1" x:Name="togckrgbled" Margin="-20,0,0,0" Height="30" Style="{StaticResource iosToggleButton}" IsChecked="{Binding Path=checkrgbledoption, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></ToggleButton>
                                <Label Grid.Row="7" Grid.Column="2" FontSize="25" FontWeight="Bold">
                                    <Label.Style>
                                        <Style TargetType="Label">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=togckrgbled, Path=IsChecked}" Value="true">
                                                    <Setter Property="Content" Value="ON"/>
                                                    <Setter Property="Foreground" Value="{StaticResource colorContentOK}"/>
