                            <Grid Height="30">
                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" Text="SYSTEM LOG" FontWeight="SemiBold"/>
                            </Grid>
                        </TabItem.Header>
                        
                        <Border BorderBrush="{StaticResource colorBorder}" BorderThickness="0" CornerRadius="5" Margin="5,0,5,5">
                            <Grid>
                                <!--<Border Background="#DADADA" Height="180" VerticalAlignment="Top" BorderBrush="{StaticResource colorBorder}" BorderThickness="0,0,0,0.5" CornerRadius="5">
                            <StackPanel>
                                <Grid VerticalAlignment="Top" HorizontalAlignment="Stretch">
